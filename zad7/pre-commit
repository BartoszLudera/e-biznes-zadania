#!/bin/bash

cd "$(git rev-parse --show-toplevel)" || exit 1

STAGED_FILES=($(git diff --cached --name-only --diff-filter=ACM | grep '^zad7/.*\.go$'))

if [[ ${#STAGED_FILES[@]} -eq 0 ]]; then
  exit 0
fi

echo "üîç Linting ${#STAGED_FILES[@]} Go files in zad7/..."

UNFORMATTED=$(gofmt -l "${STAGED_FILES[@]}")

if [[ "$UNFORMATTED" != "" ]]; then
  echo "‚ùå The following files are not gofmt formatted:"
  echo "$UNFORMATTED"
  echo "üí° Fix with: gofmt -w zad7/"
  exit 1
fi

echo "‚úÖ gofmt passed for zad7/"
exit 0
